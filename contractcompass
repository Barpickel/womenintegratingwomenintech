                     <Icons.Briefcase width="100%" height="100%" />
                  </div>
                </div>
              </div>
            </div>
          );
        }

        function NegotiationSection() {
          const [scenario, setScenario] = useState(null);

          const scenarios = [
            {
              title: 'הם מסרבים להעלות את שכר הבסיס',
              response: '״אני מבינה את המגבלות כרגע. האם נוכל לעגן בחוזה דיון שכר נוסף בעוד 6 חודשים? או לחלופין, האם ניתן להגדיל את המענק החד פעמי (Signing Bonus)?״'
            },
            {
              title: 'הם לא מוכנים לשנות את סעיף הקניין הרוחני',
              response: '״חשוב לי להיות שקופה. יש לי פרויקטים אישיים שאני עובדת עליהם בסופ״ש. אני מבקשת להוסיף נספח שמחריג רשימה ספציפית של פרויקטים קיימים, כדי למנוע אי הבנות בעתיד.״'
            },
            {
              title: 'התפקיד נשמע עמום מדי',
              response: '״אני מאוד רוצה להצליח בתפקיד. כדי שנוכל לתאם ציפיות, אשמח להוסיף להגדרת התפקיד שורה שמפרטת את תחומי האחריות המרכזיים (למשל: ניהול צוות X, אחריות על טכנולוגיה Y).״'
            }
          ];

          return (
            <div className="space-y-6 animate-fade-in">
               <h2 className="text-2xl font-bold text-slate-800 border-b border-slate-200 pb-2">סימולטור משא ומתן</h2>
               <p className="text-slate-600">
                 מו״מ הוא לא מלחמה, הוא ריקוד. הנה איך להגיב באלגנטיות ובאסרטיביות כשהצד השני מקשה.
                 <br/>
                 <span className="text-sm italic text-slate-500">לחצי על הסיטואציה כדי לראות את התשובה המומלצת.</span>
               </p>

               <div className="grid gap-4">
                 {scenarios.map((item, idx) => (
                   <div key={idx} className="bg-white border border-slate-200 rounded-xl overflow-hidden shadow-sm transition-all hover:shadow-md">
                     <button 
                        onClick={() => setScenario(scenario === idx ? null : idx)}
                        className="w-full text-right p-4 font-bold flex justify-between items-center text-slate-700 hover:bg-slate-50"
                     >
                       {item.title}
                       {scenario === idx ? <Icons.ChevronUp size={20}/> : <Icons.ChevronDown size={20}/>}
                     </button>
                     {scenario === idx && (
                       <div className="p-4 bg-purple-50 text-purple-900 border-t border-purple-100 animate-fade-in">
                         <p className="font-semibold mb-1">התשובה שלך:</p>
                         "{item.response}"
                       </div>
                     )}
                   </div>
                 ))}
               </div>

               <div className="bg-blue-50 p-4 rounded-xl border border-blue-100 mt-6">
                 <h3 className="font-bold text-blue-800 mb-2">אסטרטגיית "הסולם":</h3>
                 <p className="text-sm text-slate-700">
                   ג'סיקה ממליצה: אם נתקעת במו״מ, "לרדת מהעץ" זו לא חולשה, זו טקטיקה.
                   ויתרת על שכר? בקשי עוד ימי חופשה. ויתרת על רכב? בקשי עוד ימי עבודה מהבית. תמיד תשמרי על איזון בתמורה.
                 </p>
               </div>
            </div>
          );
        }

        // --- Main App Component ---
        function ContractDashboard() {
          const [activeSection, setActiveSection] = useState('overview');
          const [checklist, setChecklist] = useState([
            { id: '1', text: 'הגדרת תפקיד ספציפית (לא "לפי צרכי החברה")', checked: false, tooltip: 'מונע שינוי תפקיד חד צדדי בעתיד' },
            { id: '2', text: 'פיצול שכר: וידוא הפרשות סוציאליות על הכל', checked: false, tooltip: 'שעות נוספות גלובליות לרוב לא כוללות פנסיה - זה המקום להתמקח' },
            { id: '3', text: 'קרן השתלמות (הטבה, לא חובה - לבקש!)', checked: false, tooltip: 'פטור ממס רווחי הון, ההטבה הכי טובה שיש' },
            { id: '4', text: 'סעיף 14: האם "במקום" או "על חשבון"?', checked: false, tooltip: 'עדיף "במקום" - הכסף שלכם בכל מקרה, גם בהתפטרות' },
            { id: '5', text: 'קניין רוחני: החרגת פרויקטים אישיים', checked: false, tooltip: 'חשוב מאוד אם את מפתחת דברים בזמנך הפנוי' },
            { id: '6', text: 'אי תחרות: צמצום זמן והיקף', checked: false, tooltip: 'להגביל לחצי שנה ולמתחרים ישירים בלבד' },
            { id: '7', text: 'בונוסים: בקשת מודל יעדים ברור', checked: false, tooltip: 'נספח יעדים עדיף על "שיקול דעת בלעדי של החברה"' },
          ]);

          const toggleCheck = (id) => {
            setChecklist(checklist.map(item => 
              item.id === id ? { ...item, checked: !item.checked } : item
            ));
          };

          const completedCount = checklist.filter(i => i.checked).length;
          const progress = (completedCount / checklist.length) * 100;

          return (
            <div className="min-h-screen flex flex-col">
              
              {/* Header */}
              <header className="bg-gradient-to-l from-indigo-900 to-purple-800 text-white shadow-lg">
                <div className="max-w-6xl mx-auto p-4 md:p-6">
                  <div className="flex flex-col md:flex-row justify-between items-center gap-6">
                    <div className="flex items-center gap-6 w-full md:w-auto">
                      
                      {/* Organization Name Badge */}
                      <div className="bg-white/10 backdrop-blur-md p-4 rounded-xl shadow-inner border border-white/20 flex-shrink-0 flex items-center justify-center">
                         <span className="text-lg font-bold text-white leading-tight text-center tracking-wide">
                           נשים משלבות<br/>נשים בהייטק
                         </span>
                      </div>
                      
                      <div>
                        <h1 className="text-3xl font-bold flex items-center gap-3">
                          <Icons.Scale className="h-8 w-8 text-purple-300 hidden md:block" />
                          המצפן לחוזה
                        </h1>
                        <p className="text-indigo-100 text-lg opacity-90 hidden md:block mt-1">
                          דשבורד להעצמה וידע לפני חתימה על חוזה הייטק
                        </p>
                      </div>
                    </div>

                    <div className="bg-white/10 px-4 py-3 rounded-lg backdrop-blur-sm w-full md:w-auto mt-2 md:mt-0 shadow-inner border border-white/10">
                      <div className="flex justify-between items-center gap-4 mb-2">
                        <span className="text-sm font-semibold">מוכנות לחתימה:</span>
                        <span className="text-sm font-bold text-green-300">{Math.round(progress)}%</span>
                      </div>
                      <div className="w-full md:w-48 h-3 bg-indigo-900/50 rounded-full overflow-hidden">
                        <div 
                          className="h-full bg-green-400 rounded-full transition-all duration-500 shadow-[0_0_10px_rgba(74,222,128,0.5)]" 
                          style={{ width: `${progress}%` }}
                        />
                      </div>
                    </div>
                  </div>
                  <p className="text-indigo-100 text-sm mt-4 md:hidden px-1 text-center">
                    דשבורד להעצמה וידע לפני חתימה על חוזה הייטק
                  </p>
                </div>
              </header>

              <div className="max-w-6xl mx-auto p-4 md:p-6 grid grid-cols-1 md:grid-cols-12 gap-6 flex-grow w-full">
                
                {/* Sidebar Navigation */}
                <nav className="md:col-span-3 space-y-2">
                  <NavButton 
                    active={activeSection === 'overview'} 
                    onClick={() => setActiveSection('overview')}
                    icon={<Icons.Target />}
                    label="מבט על"
                  />
                  <NavButton 
                    active={activeSection === 'money'} 
                    onClick={() => setActiveSection('money')}
                    icon={<Icons.DollarSign />}
                    label="כסף ותנאים"
                  />
                  <NavButton 
                    active={activeSection === 'legal'} 
                    onClick={() => setActiveSection('legal')}
                    icon={<Icons.Shield />}
                    label="מוקשים משפטיים"
                  />
                  <NavButton 
                    active={activeSection === 'life'} 
                    onClick={() => setActiveSection('life')}
                    icon={<Icons.Heart />}
                    label="איזון וזכויות"
                  />
                  <NavButton 
                    active={activeSection === 'negotiation'} 
                    onClick={() => setActiveSection('negotiation')}
                    icon={<Icons.Brain />}
                    label="סימולטור מו״מ"
                  />
                  
                  <div className="mt-8 bg-white p-4 rounded-xl shadow-sm border border-slate-200 sticky top-4">
                    <h3 className="font-bold text-slate-700 mb-3 flex items-center gap-2 border-b border-slate-100 pb-2">
                      <Icons.CheckCircle2 size={18} className="text-green-600" />
                      צ'ק ליסט לחתימה
                    </h3>
                    <div className="space-y-3 max-h-[40vh] overflow-y-auto custom-scrollbar">
                      {checklist.map(item => (
                        <div key={item.id} className="flex items-start gap-2 text-sm group relative hover:bg-slate-50 p-1 rounded transition-colors">
                          <input 
                            type="checkbox" 
                            checked={item.checked}
                            onChange={() => toggleCheck(item.id)}
                            className="mt-1 rounded text-purple-600 focus:ring-purple-500 cursor-pointer"
                          />
                          <div className="flex flex-col">
                            <span className={`transition-all ${item.checked ? 'line-through text-slate-400' : 'text-slate-700 font-medium'}`}>
                              {item.text}
                            </span>
                            <span className="text-xs text-slate-500 mt-0.5">{item.tooltip}</span>
                          </div>
                        </div>
                      ))}
                    </div>
                  </div>
                </nav>

                {/* Main Content Area */}
                <main className="md:col-span-9 space-y-6">
                  {activeSection === 'overview' && <OverviewSection />}
                  {activeSection === 'money' && <MoneySection />}
                  {activeSection === 'legal' && <LegalSection />}
                  {activeSection === 'life' && <LifeSection />}
                  {activeSection === 'negotiation' && <NegotiationSection />}
                </main>
              </div>

              {/* Footer / Credits */}
              <footer className="bg-slate-900 text-slate-300 py-8 mt-12 border-t border-slate-800">
                <div className="max-w-6xl mx-auto px-6 flex flex-col md:flex-row justify-between items-center gap-6 text-center md:text-right">
                  
                  <div className="flex flex-col gap-2">
                     <h3 className="text-white font-bold text-lg">נשים משלבות נשים בהייטק</h3>
                     <a 
                       href="https://www.women4womenhitech.com/" 
                       target="_blank" 
                       rel="noopener noreferrer"
                       className="flex items-center justify-center md:justify-start gap-2 text-sm text-indigo-300 hover:text-indigo-200 transition-colors"
                     >
                       <Icons.Globe size={16} />
                       www.women4womenhitech.com
                     </a>
                  </div>

                  <div className="h-px w-24 bg-slate-700 md:hidden"></div>

                  <div className="flex flex-col gap-2">
                    <p className="text-sm font-medium text-white">
                      תודה מיוחדת וכל הזכויות שמורות לג׳סיקה פורמן
                    </p>
                    <p className="text-xs text-slate-400">
                      עו״ד בנושאי דיני עבודה וחוזים
                    </p>
                    <a 
                      href="https://www.linkedin.com/in/jessica-furman-adv/" 
                      target="_blank" 
                      rel="noopener noreferrer"
                      className="flex items-center justify-center md:justify-end gap-2 text-sm text-blue-400 hover:text-blue-300 transition-colors mt-1"
                    >
                      <Icons.Linkedin size={16} />
                      לעמוד הלינקדאין של ג'סיקה
                    </a>
                  </div>

                </div>
              </footer>

            </div>
          );
        }

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<ContractDashboard />);
    </script>
