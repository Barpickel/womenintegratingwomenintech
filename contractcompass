                {children}
              </div>
            </div>
          );
        }

        function ExpandableCard({ title, children }) {
          const [isOpen, setIsOpen] = useState(false);
          return (
            <div className="bg-white border border-slate-200 rounded-xl shadow-sm hover:shadow-md transition-shadow">
              <button 
                onClick={() => setIsOpen(!isOpen)}
                className="w-full flex justify-between items-center p-5 text-right font-bold text-slate-700"
              >
                {title}
                {isOpen ? <Icons.ChevronUp className="text-slate-400" /> : <Icons.ChevronDown className="text-slate-400" />}
              </button>
              {isOpen && (
                <div className="px-5 pb-5 text-sm text-slate-600 border-t border-slate-100 pt-3 animate-fade-in">
                  {children}
                </div>
              )}
            </div>
          );
        }

